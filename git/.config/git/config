	email = 5757883+vicmattos@users.noreply.github.com
[core]
	editor = code --wait
[alias]
	p = !git push
	pf = !git push --force
	s = !git status --short
	b = !git branch --all
	bn = !git switch --create
	bd = !git branch -d
	bdf = !git branch -D
	c = !git commit --message
	ca = !git commit --amend --no-edit
	ac = !git add --all && git commit --message
	acapf = !git add --all && git ca && git pf
	undo = !git reset --soft HEAD^
	ignore = !git rm --cached
	l = !git log --pretty=format:'%C(blue)%h - %C(brightcyan)%cn, %C(brightgreen)%cs %C(green)(%cr) %C(white)%s %C(red)%d'
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
